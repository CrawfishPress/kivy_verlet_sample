MainPage:
    canvas:
        Color:
            rgba: 0.9, 0.1, 0.1, 1  # red, should not be visible
        Rectangle:
            size: self.size
            pos: 0, 0
    RelativeLayout:
        size_hint: 0.63, 1.0
        pos_hint: {'left': 1}
        canvas:
            Color:
                rgba: 0.1, 0.1, 0.1, 1
            Rectangle:
                size: self.size
                pos: 0, 0
        Widget:  # Originally, in code, was the BallPit (was also an Image)
            pos_hint: {'left': 1}
            canvas:
                Color:
                    rgba: 0.5, 0.5, 0.5, 1
                Ellipse:
                    size: 1000, 1000
                    pos: 0, 0
    RelativeLayout:
        size_hint: 0.37, 1.0
        pos_hint: {'right': 1}
        canvas:
            Color:
                rgba: 0.8, 0.8, 0.8, 1
            Rectangle:
                size: self.size
                pos: 0, 0
        Button:
            size_hint: 0.5, 0.1
            pos_hint: {'top': 1}
            text: "Click Me"
            on_release:
                self.parent.parent.start_demo()
        Slider:
            id: ball_slider_id
            size_hint: 1, 0.1
            pos_hint: {'top': 0.9}
            min: 1
            max: 200
            step: 1
            orientation: 'horizontal'
        Label:
            size_hint: 1, 0.1
            pos_hint: {'top': 0.8}
            text: "Set to: " + str(ball_slider_id.value)
            color: 0, 0, 0, 1
